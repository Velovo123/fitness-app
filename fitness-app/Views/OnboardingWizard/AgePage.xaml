<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fitness_app.Views.OnboardingWizard.AgePage"
             xmlns:views="clr-namespace:fitness_app.Views.NavBars"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:controls="clr-namespace:fitness_app.Controls"
             ControlTemplate="{StaticResource TealTemplate}"
             NavigationPage.TitleView="{views:NavBarWithSkipView}"
             Style="{StaticResource NavigationPageStyle}">
    
    <controls:PickerView ItemsSource="{Binding Days}"
                         Style="{StaticResource PickerViewStyle}">
        <controls:PickerView.Behaviors>
            <toolkit:EventToCommandBehavior EventName="SelectedIndexChanged"
                                            Command="{Binding ItemSelectedCommand}"
                                            EventArgsConverter="{StaticResource EventArgsConverter}"/>
        </controls:PickerView.Behaviors> 
    </controls:PickerView>
</ContentPage>