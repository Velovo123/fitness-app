<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:fitness_app.Models"
    x:Class="fitness_app.Views.Views.ToggleButtonsView"
    x:Name="This">
    <ScrollView  Style="{StaticResource ToggleButtonsViewScrollViewStyle}">
        <HorizontalStackLayout BindableLayout.ItemsSource="{Binding Items}"
                               BindableLayout.EmptyView="No Items Found"
                               Style="{StaticResource ToggleButtonsViewHorizontalStackLayoutContainer}">
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="models:ToggleButtonItem">
                    <Button Text="{Binding Text}"
                            ImageSource="{Binding DisplayImageSource}"
                            Command="{Binding BindingContext.ItemTappedCommand, Source={x:Reference This}}"
                            CommandParameter="{Binding .}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SmallGreyButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger TargetType="Button" Binding="{Binding IsSelected}" Value="True">
                                        <Setter Property="BackgroundColor" Value="Black" />
                                        <Setter Property="TextColor" Value="White" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </HorizontalStackLayout>
    </ScrollView>
</ContentView>