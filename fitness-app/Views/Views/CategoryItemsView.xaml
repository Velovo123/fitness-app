<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:fitness_app.Models"
    x:Class="fitness_app.Views.Views.CategoryItemsView"
    x:Name="This">

    <ScrollView Orientation="Horizontal"
                HorizontalScrollBarVisibility="Never"
                Padding="4">
        <HorizontalStackLayout BindableLayout.ItemsSource="{Binding CategoryItems}"
                               BindableLayout.EmptyView="No categories found."
                               Spacing="12">

            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="models:CategoryItem">
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="8">
                        <Frame WidthRequest="70"
                               HeightRequest="70"
                               Padding="0"
                               CornerRadius="35"
                               HasShadow="{Binding IsSelected}">
                               <Image Source="{Binding ImageSource}" 
                                      Aspect="AspectFill" />
                        </Frame>

                        <Label Text="{Binding Title}"
                               HorizontalOptions="Center"
                               FontFamily="MontserratSemiBold"
                               FontSize="12" />
                        
                        <VerticalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding BindingContext.CategoryCommand, Source={x:Reference This}}"
                                                  CommandParameter="{Binding .}"/>
                        </VerticalStackLayout.GestureRecognizers>
                    </VerticalStackLayout>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </HorizontalStackLayout>
    </ScrollView>
</ContentView>